<%- include ('../partials/header') %>

	<div class='row'>
		<div style='width: 30%; margin: 25px auto; min-width: 350px;'>
			<h1 style='text-align: center; margin-top:0; margin-bottom: 20px;'> Edit Comment </h1>
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class='form-group'>
					<textarea class ='description form-control' name="comment[text]"><%= comment.text %> </textarea>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block'> Submit </button>
				</div>
			</form>
			<a href='/campgrounds'> Go Back </a>
		</div>
	</div>

